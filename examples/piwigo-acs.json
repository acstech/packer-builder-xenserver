	 "sudo vi ./network.tmp<enter><wait>",
	 "i<enter># Generated by XenServer packer plugin<enter>",
	 "NETWORKING=yes<enter>",
	 "<esc>:wq!<enter><wait>",
	 "sudo cp ./network.tmp /etc/sysconfig/network<enter>",
	 "sudo ifdown eth0<enter><wait5>",
	 "sudo ifup eth0<enter><wait5>",
