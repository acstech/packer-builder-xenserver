{
  "builders": [
    {
      "type": "xenserver-vm",
      "remote_host": "10.192.133.60",
      "remote_username": "root",
      "remote_password": "{{user `xenserver_password`}}",

      "boot_command": [
        "<cad><wait5>Password1<enter><wait>",
	 "cp /etc/sysconfig/network-scripts/ifcfg-eth0 ./ifcfg-eth0.bak<enter>",
	 "sudo vi ./ifcfg-eth0.tmp<enter><wait>",
	 "i<enter># Generated by XenServer packer plugin<enter>",
	 "DEVICE=\"eth0\"<enter>",
	 "ONBOOT=yes<enter>",
	 "NETBOOT=yes<enter>",
	 "BOOTPROTO=dhcp<enter>",
	 "TYPE=Ethernet<enter>",
	 "NAME=\"eth0\"<enter>",
	 "NM_CONTROLLED=no<enter>",
	 "<esc>:wq!<enter><wait>",
	 "sudo cp ./ifcfg-eth0.tmp /etc/sysconfig/network-scripts/ifcfg-eth0<enter>",
	 "cp /etc/sysconfig/network ./network.bak<enter>",
	 "sudo vi ./network.tmp<enter><wait>",
	 "i<enter># Generated by XenServer packer plugin<enter>",
	 "NETWORKING=yes<enter>",
	 "<esc>:wq!<enter><wait>",
	 "sudo cp ./network.tmp /etc/sysconfig/network<enter>",
	 "sudo ifdown eth0<enter><wait5>",
	 "sudo ifup eth0<enter><wait5>",
	 "curl http://169.254.0.1/packer-clean.sh > ./packer-clean.sh <enter><wait10>",
	 "sudo chmod +x packer-clean.sh<enter>",
	 "sudo ./packer-clean.sh<enter>"
      ],
      "boot_wait": "50s",
      "http_directory": "/var/www/html/packer",
      "source_vm": "Trend",

      "script_url": "http://10.192.133.80/packer/xenserver/",
      "output_directory": "/var/www/html/vhd",
      "format": "vhd",
      "shutdown_command": "",
      "communicator": "winrm",
      "winrm_username": "administrator",
      "winrm_password": "Password1",
      "ssh_username": "foo",
      "ssh_password": "",
      "ssh_wait_timeout": "10000s",
      "sr_name": "NFS Packer",
      "vm_name": "packer-export-trend",
      "nfs_mount": "10.192.130.41:/vol/exports/packer"
    }
  ],

  "variables": {
    "xenserver_password": "{{env `XS_PASS`}}"
  }
}
